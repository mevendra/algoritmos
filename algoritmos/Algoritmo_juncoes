Algoritmo Juncoes
Grafo(Vertices, Arestas)

Fila Vs

for(Vertice s: Vertices)
{
	Vs = ordenar_topologicamente 	//Busca em largura?

	s.particao = nova_particao
	s.particao.representante = s

	while(!Vs.vazio())
	{
		Vertice v = Vs.primeiro()
		if ((v.mae == s  || v.pai == s) || v.mae.particao != v.pai.particao) {
			v.particao = nova_particao
			v.particao.representante = v
		} else {
			v.particao = v.mae.particao
		}

	}
}
