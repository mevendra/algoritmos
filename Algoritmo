Grafo(g,a)

fila
for(Vertice v: Grafo)
{
	if (v.eh_folha) {
		v.lista_cores.adicionar(nova_lista(v.cor))
		fila.adicionar(v);
	}
}

while(!fila.vazio())
{
	Vertice v = fila.remover_primeiro();
	for(Vertice pai: v.pais())
	{
		for(Lista lista: v.lista_cores)
		{
			if (!pai.lista_cores.contem(lista + pai.cor)) {
				pai.lista_cores.adicionar(lista + pai.cor)
			}
		}
		fila.adicionar(pai)
	}
}